+"""
+Tests for Response Headers Validation
+
+This feature adds support for validating response headers in FastAPI GET routes,
+similar to how request headers are handled with Header().
+"""
+import typing
+from typing import Optional
+
+import pytest
+from fastapi import FastAPI, APIRouter
+from fastapi.testclient import TestClient
+from fastapi.responses import JSONResponse
+from fastapi.exceptions import ResponseValidationError
+from pydantic import BaseModel, Field
+from typing_extensions import Annotated
+
+
+class ResponseHeaders(BaseModel):
+    """Model for response headers"""
+    x_custom_header: Annotated[str, Field(alias="X-Custom-Header")]
+    x_rate_limit: Annotated[int, Field(alias="X-Rate-Limit", ge=0)]
+    x_request_id: Annotated[Optional[str], Field(alias="X-Request-ID")] = None
+
+
+def test_response_headers_basic():
+    """Test basic response headers validation"""
+    app = FastAPI()
+
+    @app.get("/items", response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["item1", "item2"]})
+        response.headers["X-Custom-Header"] = "custom-value"
+        response.headers["X-Rate-Limit"] = "100"
+        return response
+
+    client = TestClient(app)
+    response = client.get("/items")
+    
+    assert response.status_code == 200
+    assert response.headers["X-Custom-Header"] == "custom-value"
+    assert response.headers["X-Rate-Limit"] == "100"
+
+
+def test_response_headers_validation_error():
+    """Test that invalid response headers raise validation errors"""
+    app = FastAPI()
+
+    @app.get("/items", response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["item1"]})
+        response.headers["X-Custom-Header"] = "valid"
+        response.headers["X-Rate-Limit"] = "-5"  # Invalid: should be >= 0
+        return response
+
+    client = TestClient(app)
+    with pytest.raises(ResponseValidationError):
+        client.get("/items")
+
+
+def test_response_headers_with_response_model():
+    """Test that response_headers works alongside response_model"""
+    app = FastAPI()
+
+    class ItemResponse(BaseModel):
+        items: list[str]
+
+    @app.get("/items", response_model=ItemResponse, response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["item1", "item2"]})
+        response.headers["X-Custom-Header"] = "test"
+        response.headers["X-Rate-Limit"] = "50"
+        return response
+
+    client = TestClient(app)
+    response = client.get("/items")
+    
+    assert response.status_code == 200
+    assert response.json() == {"items": ["item1", "item2"]}
+    assert response.headers["X-Custom-Header"] == "test"
+    assert response.headers["X-Rate-Limit"] == "50"
+
+
+def test_response_headers_optional_fields():
+    """Test that optional header fields work correctly"""
+    app = FastAPI()
+
+    @app.get("/items", response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["item1"]})
+        response.headers["X-Custom-Header"] = "required"
+        response.headers["X-Rate-Limit"] = "100"
+        # X-Request-ID is optional, not provided
+        return response
+
+    client = TestClient(app)
+    response = client.get("/items")
+    
+    assert response.status_code == 200
+    assert response.headers["X-Custom-Header"] == "required"
+    assert response.headers["X-Rate-Limit"] == "100"
+    # Optional header should not be in response if not set
+    assert "X-Request-ID" not in response.headers or response.headers.get("X-Request-ID") == ""
+
+
+def test_response_headers_type_coercion():
+    """Test that response headers are properly type-coerced and validated"""
+    app = FastAPI()
+
+    @app.get("/items", response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["item1"]})
+        response.headers["X-Custom-Header"] = "test"
+        response.headers["X-Rate-Limit"] = "200"  # String that should be coerced to int and validated
+        return response
+
+    client = TestClient(app)
+    response = client.get("/items")
+    
+    assert response.status_code == 200
+    # Should be coerced to int and validated (ge=0 constraint should pass)
+    assert response.headers["X-Rate-Limit"] == "200"
+    
+    # Test that non-coercible value fails
+    @app.get("/invalid", response_headers=ResponseHeaders)
+    def get_invalid():
+        response = JSONResponse(content={"items": []})
+        response.headers["X-Custom-Header"] = "test"
+        response.headers["X-Rate-Limit"] = "not-a-number"  # Cannot coerce to int
+        return response
+    
+    with pytest.raises(ResponseValidationError):
+        client.get("/invalid")
+
+
+def test_response_headers_missing_required_field():
+    """Test validation error when required header is missing"""
+    app = FastAPI()
+
+    @app.get("/items", response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["item1"]})
+        # Missing required X-Custom-Header
+        response.headers["X-Rate-Limit"] = "100"
+        return response
+
+    client = TestClient(app)
+    with pytest.raises(ResponseValidationError):
+        client.get("/items")
+
+
+def test_response_headers_with_direct_response():
+    """Test that response_headers works with direct Response objects"""
+    app = FastAPI()
+
+    @app.get("/items", response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["item1"]})
+        response.headers["X-Custom-Header"] = "direct"
+        response.headers["X-Rate-Limit"] = "75"
+        return response
+
+    client = TestClient(app)
+    response = client.get("/items")
+    
+    assert response.status_code == 200
+    assert response.headers["X-Custom-Header"] == "direct"
+    assert response.headers["X-Rate-Limit"] == "75"
+
+
+def test_response_headers_case_insensitive():
+    """Test that header validation is case-insensitive (HTTP standard)"""
+    app = FastAPI()
+
+    @app.get("/items", response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["item1"]})
+        # Set headers with different casing than the alias
+        response.headers["x-custom-header"] = "lowercase"  # alias is "X-Custom-Header"
+        response.headers["X-RATE-LIMIT"] = "100"  # alias is "X-Rate-Limit"
+        return response
+
+    client = TestClient(app)
+    response = client.get("/items")
+    
+    # Should pass validation despite case differences
+    assert response.status_code == 200
+    assert response.headers.get("x-custom-header") or response.headers.get("X-Custom-Header")
+
+
+def test_response_headers_with_defaults():
+    """Test that optional headers with default values work correctly"""
+    app = FastAPI()
+    
+    class HeadersWithDefaults(BaseModel):
+        x_custom: Annotated[str, Field(alias="X-Custom")]
+        x_version: Annotated[str, Field(alias="X-Version")] = "1.0"  # Has default
+    
+    @app.get("/items", response_headers=HeadersWithDefaults)
+    def get_items():
+        response = JSONResponse(content={"items": []})
+        response.headers["X-Custom"] = "test"
+        # X-Version not provided, should use default value for validation
+        return response
+    
+    client = TestClient(app)
+    response = client.get("/items")
+    
+    # Should pass validation with default value
+    assert response.status_code == 200
+    assert response.headers["X-Custom"] == "test"
+    # Default value allows validation to pass even when header not set
+
+
+def test_response_headers_with_apirouter():
+    """Test that response_headers works with APIRouter.get()"""
+    app = FastAPI()
+    router = APIRouter()
+    
+    @router.get("/items", response_headers=ResponseHeaders)
+    def get_items():
+        response = JSONResponse(content={"items": ["router-item"]})
+        response.headers["X-Custom-Header"] = "from-router"
+        response.headers["X-Rate-Limit"] = "50"
+        return response
+    
+    app.include_router(router)
+    client = TestClient(app)
+    response = client.get("/items")
+    
+    assert response.status_code == 200
+    assert response.headers["X-Custom-Header"] == "from-router"
+    assert response.headers["X-Rate-Limit"] == "50"
