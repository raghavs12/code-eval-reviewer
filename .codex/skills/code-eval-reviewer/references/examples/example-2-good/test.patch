+"""Tests for Fraction serialization consistency"""
+from fractions import Fraction
+from pydantic import BaseModel, Field
+import pytest
+
+
+def test_fraction_python_mode_returns_objects():
+    """Fraction should serialize to objects in Python mode like Decimal"""
+    class Model(BaseModel):
+        value: Fraction
+
+    m = Model(value=Fraction(1, 3))
+    dumped = m.model_dump()
+
+    assert isinstance(dumped['value'], Fraction)
+    assert dumped['value'] == Fraction(1, 3)
+
+
+def test_fraction_json_mode_returns_strings():
+    """Fraction should serialize to strings in JSON mode"""
+    class Model(BaseModel):
+        value: Fraction
+
+    m = Model(value=Fraction(1, 3))
+    json_str = m.model_dump_json()
+
+    assert '"value":"1/3"' in json_str or '"value": "1/3"' in json_str
+
+
+def test_fraction_zero_serialization():
+    """Zero fractions should serialize cleanly"""
+    class Model(BaseModel):
+        value: Fraction
+
+    m = Model(value=Fraction(0, 1))
+    json_str = m.model_dump_json()
+
+    # Should be "0" not "0/1"
+    assert '"value":"0"' in json_str or '"value": "0"' in json_str
+
+
+def test_fraction_field_constraints():
+    """FractionField should support validation constraints"""
+    from pydantic import FractionField
+
+    class Model(BaseModel):
+        value: FractionField(gt=Fraction(0), le=Fraction(1))
+
+    # Valid value
+    m = Model(value=Fraction(1, 2))
+    assert m.value == Fraction(1, 2)
+
+    # Invalid: below minimum
+    with pytest.raises(ValueError):
+        Model(value=Fraction(-1, 2))
+
+    # Invalid: above maximum
+    with pytest.raises(ValueError):
+        Model(value=Fraction(3, 2))
