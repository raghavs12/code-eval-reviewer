+#!/bin/bash
+set -e
+set -u
+
+if ! command -v pytest >/dev/null 2>&1; then
+  echo "pytest is required"
+  exit 1
+fi
+
+# Must be run from repository root containing pyproject.toml
+if [ ! -f "pyproject.toml" ]; then
+  echo "Run from repository root"
+  exit 1
+fi
+
+MODE="${1:-}"
+case "$MODE" in
+  base)
+    echo "[base] running existing tests (excluding new tests)"
+    python -m pytest tests/test_datastructures.py tests/test_additional_properties.py -q --tb=short
+    ;;
+  new)
+    echo "[new] running newly added tests (these should fail at base commit)"
+    python -m pytest tests/test_response_headers_feature.py -v --tb=short
+    ;;
+  *) echo "usage: ./test.sh {base|new}"; exit 1;;
